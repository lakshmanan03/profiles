.animated-placeholder::-webkit-input-placeholder {
  /* WebKit browsers */
  animation: moveUp 0.5s forwards;
}

.animated-placeholder::-moz-placeholder {
  /* Mozilla Firefox */
  animation: moveUp 0.5s forwards;
}

.animated-placeholder:-ms-input-placeholder {
  /* Internet Explorer/Edge */
  animation: moveUp 0.5s forwards;
}

.animated-placeholder::placeholder {
  /* Other modern browsers */
  animation: moveUp 0.5s forwards;
}

@keyframes moveUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
